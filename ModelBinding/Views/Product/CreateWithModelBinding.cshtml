@model Product
@*
	-- Added this in ProductController
@{
	ViewData["Title"] = "Create a new product";
}
*@


<h2>Create Product</h2>

<form method="post">
	<div class="col-md-6">
		<div class="form-group">
			<label class="control-label" asp-for="Title"></label>
			<input class="form-control" asp-for="Title" />
			<span class="text-danger" asp-validation-for="Title"></span>
		</div>

		<div class="form-group">
			<label class="control-label" asp-for="Price"></label>
			<input class="form-control" asp-for="Price" />
			<span class="text-danger" asp-validation-for="Price"></span>
		</div>

		<div class="form-group">
			<label class="control-label" asp-for="Qty"></label>
			<input class="form-control" asp-for="Qty" />
			<span class="text-danger" asp-validation-for="Qty"></span>
		</div>
		<br />

		<div class="form-group">
			<input class="btn btn-primary form-control" type="submit" value="Add Product" />
		</div>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}